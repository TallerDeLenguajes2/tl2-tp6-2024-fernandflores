@model List<Presupuestos>
         <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">            
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-controller="Presupuestos" asp-action="CrearPresupuesto">Crear Presupuesto</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    <h2 class="text-center">LISTADO DE PRESUPUESTO</h2>
    <section>
        <article>
            <table class="table table-bordered bordered-info">
                <thead class="text-center">
                    <th>Nombre Destinatario</th>
                    <th>Fecha De Creacion</th>
                    <th colspan="3">Acciones</th>
                </thead>
                @{
                    foreach(var item in Model) // envia @item.IdProducto el id a su controlador 
                    {
                        <tr>
                            <td class="text-start">@item.NombreDestinatario</td>
                            <td class="text-center">@item.FechaCreacion</td>
                            <td class="text-center"><a asp-controller="Presupuestos" asp-action="VerDetalle" asp-route-id="@item.IdPresupuesto" class="btn btn-info text-white">Ver</a></td> 
                            <td class="text-center"><a asp-controller="Presupuestos" asp-action="ModificarForm" asp-route-idPres="@item.IdPresupuesto" class="btn btn-secondary">Modificar</a></td>
                            <td class="text-center"><a asp-controller="Presupuestos" asp-action="EliminarPresupuesto" asp-route-id="@item.IdPresupuesto" class="btn btn-danger">Eliminar</a></td>
                        </tr>
                    }
                }
            </table>
        </article>
    </section>
@model Clientes
<section class="d-flex justify-content-center align-items-center" style="height: 70vh;">
    <article class="border rounded p-5">
        <form asp-controller="Clientes" asp-action="CrearCliente" method="post">
            <section class="form-group p-2">
                <label asp-for="Nombre" class="form-label">Nombre cliente:</label>
                <input type="text" asp-for="Nombre" class="form-control-sm">
            </section>
            <section class="form-group p-2">
                <label asp-for="Email" class="form-label">Email:</label>
                <input type="email" asp-for="Email" class="form-control-sm">
            </section>         
            <section class="form-group p-2">
                <label asp-for="Telefono" class="form-label">Telefono:</label>
                <input type="text" asp-for="Telefono" class="form-control-sm">
            </section>
            <section  class="form-group p-2">
                <input type="submit" value="crear" class="btn btn-primary">
                <a class="btn btn-danger " asp-controller="Clientes" asp-action="Index">volver</a>
            </section>
        </form>
    </article>
</section>
